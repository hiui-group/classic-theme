{
  "name": "@hi-ui/classic-theme",
  "version": "1.0.0-beta.8",
  "description": "Classic theme for HIUI",
  "main": "./es/index.js",
  "scripts": {
    "test": "node_modules/.bin/standard && node_modules/.bin/stylelint --config .stylelintrc 'src/**/*.scss'",
    "fix": "node_modules/.bin/standard --fix && node_modules/.bin/stylelint --config .stylelintrc 'src/**/*.scss' --fix",
    "build": "cross-env NODE_ENV=production gulp",
    "precommit": "lint-staged",
    "start": "webpack-dev-server --config build/webpack.dev.config.js --hot --progress --colors --port=4201"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:hiui-group/classic-theme.git"
  },
  "keywords": [
    "hiui",
    "css",
    "theme",
    "layout",
    "reset",
    "typography"
  ],
  "author": "HIUI <mi-hiui@xiaomi.com>",
  "license": "MIT",
  "dependencies": {
    "@hi-ui/core-css": "^1.0.0-beta.9",
    "classnames": "^2.2.6",
    "js-cookie": "^2.2.0",
    "lodash": "^4.17.11",
    "react": "^16.3.2",
    "react-addons-css-transition-group": "^15.6.2",
    "react-dom": "^16.3.2",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "@hi-ui/hiui": "^1.1.4",
    "autoprefixer": "^8.3.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.1",
    "history": "^4.7.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jsx-loader": "^0.13.2",
    "lint-staged": "^7.0.4",
    "merge2": "^1.2.2",
    "node-sass": "^4.8.3",
    "postcss": "^7.0.5",
    "postcss-loader": "^2.1.4",
    "react-hot-loader": "^4.1.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux-devtools-extension": "^2.13.5",
    "rimraf": "^2.6.2",
    "rucksack-css": "^1.0.2",
    "run-sequence": "^2.2.1",
    "sass-loader": "^7.0.1",
    "standard": "^11.0.1",
    "style-loader": "^0.21.0",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.4.0",
    "through2": "^2.0.3",
    "url-loader": "^1.0.1",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.2"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/es/",
      "/lib/",
      "/dist/",
      "yarn.lock",
      "/node_modules/"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "standard --fix",
      "git add"
    ]
  }
}
